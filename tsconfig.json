{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es5", "es6", "es2015", "es2016", "es2017"],
    "module": "None",
    "moduleResolution": "Node",
    "outDir": "dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "files": [
    "src/index.ts",
    "test/index.ts"
  ],
  "includes": [
    "src/*.ts",
    "test/*.ts"
  ]
}
